@model IEnumerable<WebUI.Models.ApplicationUser>

@{
    ViewBag.Title = "Список пользователь";
}

<h2>Список пользователь для роли "@ViewBag.RoleName"</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Group)
        </td>
        <td>
            @Html.ActionLink("Удалить", "DeleteUserFromRole", new {  userEmail = item.Email , role = @ViewBag.RoleName })
        </td>
    </tr>
}

</table>
