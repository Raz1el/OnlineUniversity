@model WebUI.Models.Task

@{
    ViewBag.Title = "Просмотр задачи";
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
    <hr/>
    @Html.ActionLink("Прислать решение", "Create", "Solution", new { taksId = Model.Id, returnUrl = Request.Url }, null)
   
    @if (ViewContext.HttpContext.User.IsInRole("Teacher") || ViewContext.HttpContext.User.IsInRole("Admin"))
    {
        <hr />
        @Html.ActionLink("Показать решения", "ShowSolutions", new { taskId = Model.Id })
    }
  
</div>
