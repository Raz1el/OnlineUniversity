@model WebUI.Models.Classroom

@{
    ViewBag.Title = "Список студентов";
}

<h2>Студенты класса "@Model.Name"</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Teacher.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Students) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Удалить", "DeleteUser", new { classroomId=Model.Id,userId=item.Id,returnUrl=Request.Url })
        </td>
    </tr>
}

</table>
